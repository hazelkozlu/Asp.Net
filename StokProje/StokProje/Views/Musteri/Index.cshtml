@using StokProje.Models.Entity
@model List<TBL_MUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}
@using (Html.BeginForm("Index", "Musteri", FormMethod.Get))
{
    <p>
        <b>Aranacak Müşteri Adı:</b> @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}

<table class="table table-bordered">
    @*//tr tablo satırı th sutunların başlıkları*@
    <tr>
        <th>MÜŞTERİ ID</th>
        <th>MÜŞTERİ ADI</th>
        <th>MÜŞTERİ SOYADI</th>
        <th>SİL     </th>
        <th>GÜNCELLE</th>
        <th>ALERT</th>

    </tr>
    @*//tbody verileri listeler*@

    <tbody>
        @*//model içerisindeki kategorileri alabilmek için var türünde ktgr adındaki değişkeni kullanacağım*@
        @foreach (var mus in Model)
        {
            <tr>
                <th>@mus.MUSTERIID</th>
                <td>@mus.MUSTERIAD</td>
                <td>@mus.MUSTERISOYAD</td>
                <td><a href="/MUSTERI/SIL/@mus.MUSTERIID" class="btn btn-danger">SİL</a></td>
                <td><a href="/MUSTERI/MusteriGetir/@mus.MUSTERIID" class="btn btn-success">GÜNCELLE</a></td>
                <td>
                    @Html.ActionLink("Sil Butonu", "SIL", new { id = mus.MUSTERIID }, new
                    {
                        @class = "btn btn-warning",
               onclick = "return confirm('Gerçekten silmek istiyor musunuz?')"
                    })
                </td>

            </tr>
        }

    </tbody>

</table>
<a href="/MUSTERI/YeniMusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>


