<!DOCTYPE html>
<html>
<head>
    <style>
        table {
            font-family: arial, sans-serif;
            border-collapse: collapse;
            width: 100%;
        }

        td, th {
            border: 1px solid #dddddd;
            text-align: left;
            padding: 8px;
        }

        tr:nth-child(even) {
            background-color: #dddddd;
        }
    </style>
</head>
<body>

    <table id="tbl1" class=" table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>PROJE ADI</th>
                <th>MEVKİİ</th>
                <th>ADA</th>
                <th>PARSEL</th>
                @*<th>ELEKTRİKPRJ NÜSHA</th>
                    <th>ELEKTRİKPRJ DURUM </th>
                    <th>ELEKTRİKPRJ ONAY TAR</th>
                    <th>TELEKOMPRJ NÜSHA</th>
                    <th>TELEKOMPRJ DURUM </th>
                    <th>TELEKOMPRJ ONAY TAR</th>
                    <th>KONTROLFORMU </th>
                    <th>TEDASDOSYASI</th>*@
                <th>ELEKTRIKCIAD</th>
                <th>ILETISIM</th>
                <th>AÇIKLAMALAR</th>
                <th>SİL</th>
                <th>GÜNCELLE</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var pro in Model)
            {
                <tr>
                    <th>@pro.PROJEID</th>
                    <td>@pro.PROJEAD</td>
                    <td>@pro.ilceler.ilce</td>
                    <td>@pro.ADA</td>
                    <td>@pro.PARSEL</td>
                    @*<th>@pro.ELEKTRIKPROJENUSHA</th>
                        <td>@pro.ELEKTRIKPROJEDURUM</td>
                        <td>@pro.ELEKTRIKPROJEONYTAR</td>
                        <th>@pro.TELEKOMPROJENUSHA</th>
                        <td>@pro.TELEKOMPROJEDURUM</td>
                        <td>@pro.TELEKOMPROJEONYTAR</td>
                        <td>@pro.KONTROLFORMU</td>
                        <td>@pro.TEDASDOSYASI</td>*@
                    <td>@pro.ELEKTRIKCIAD</td>
                    <td>@pro.ILETISIM</td>
                    <td>@pro.ACIKLAMALAR</td>
                    @*<td><a href="/Default/SIL/@pro.PROJEID" class="btn btn-danger">SİL</a></td>*@
                    <td>
                        @Html.ActionLink("Sil", "SIL", new { id = @pro.PROJEID }, new
                        {
                            @class = "btn btn-warning",
                   onclick = "return confirm('Gerçekten silmek istiyor musunuz?')"
                        })
                    </td>

                    <td><a href="/Default/ProjeGetir/@pro.PROJEID" class="btn btn-success">GÜNCELLE</a></td>
                </tr>

            }
        </tbody>

    </table>
</body>
</html>

